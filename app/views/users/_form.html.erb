<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :name %>
    <%= f.input :nickname %>
    <%= f.input :email %>
    <%= f.input :password%>
    <%= f.input :password_confirmation%>
        <%= f.button :submit, :class => 'btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            top_home_path, :class => 'btn' %>
<% end %>
