<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :label=>'ユーザ名' %>
    <%= f.input :nickname, :label=>'ニックネーム' %>
    <%= f.input :email, :label=>'Emailアドレス' %>
    <%= f.input :password, :label=>'パスワード' %>
    <%= f.input :password_confirmation, :label=>'パスワード確認' %>
    <%= f.button :submit, :value=> "ユーザ登録", :class => 'btn-primary' %>
        <%= link_to "キャンセル", top_home_path, :class => 'btn' %>
<% end %>
