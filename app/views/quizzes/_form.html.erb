<%= simple_form_for @quiz, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :quiz_title %>
  <%= f.input :owner_user_id%>
  <%= f.input :quiz_text%>
  <div class="form-actions">
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              quizzes_path, :class => 'btn' %>
   </div>
<% end %>
