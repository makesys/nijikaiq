<%- model_class = Quiz -%>
<div class="page-header">
    <h3>クイズ詳細画面</h3>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th><strong>ID<%#= model_class.human_attribute_name(:id) %></strong></th>
            <th><strong>タイトル<%#= model_class.human_attribute_name(:quiz_title) %></strong></th>
            <th><strong>作成者<%#= model_class.human_attribute_name(:owner_user_id) %></strong></th>
            <th><strong>クイズ本文<%#= model_class.human_attribute_name(:quiz_text) %></strong></th>
            <th><strong>選択肢A</strong></th>
            <th><strong>選択肢B</strong></th>
            <th><strong>選択肢C</strong></th>
            <th><strong>選択肢D</strong></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @quiz.id %></td>
            <td><%= @quiz.quiz_title %></td>
            <td><%= @quiz.owner_user_id %></td>
            <td><%= @quiz.quiz_text %></td>
            <td><%= @quiz.quiz_parts1 %></td>
            <td><%= @quiz.quiz_parts2 %></td>
            <td><%= @quiz.quiz_parts3 %></td>
            <td><%= @quiz.quiz_parts4 %></td>
        </tr>
    </tbody>
</table>


<div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
        quizzes_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_quiz_path(@quiz), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
         quiz_path(@quiz),
         :method => 'delete',
         :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
         :class => 'btn btn-danger' %>
</div>
